<html>
<head>
  <title>University of Life Registrar</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class='container'>
    <h1>{{ course.getName }}</h1>

    {% if students is not empty %}
      <p>Here are all Students in the Registry:</p>
      <ul>
        {% for student in students %}
          <li>{{ student.getFullname }}</li>
          <li>{{ student.getEnrollDate }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h4>Add a Student to this Course:</h4>

    <form action='/add_students' method='post'>
      <input id='course_id' name='course_id' type='hidden' value='{{ course.getId }}'>
      <label for='course_id'>Select a Student</label>
      <select id='student_id' name='student_id' type='text'>
        {% for student in all_students %}
          <option value='{{ student.getId }}'>{{ student.getFullname }}</option>
        {% endfor %}
      </select>
      <button type='submit'>Add Student</button>
    </form>
    <p><a href='/courses/{{ course.getId }}/edit'>Edit this Course</a></p>
    <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
