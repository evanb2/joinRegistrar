<html>
<head>
  <title>University of Life Registrar</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class='container'>
    <h1>{{ student.getFullname }}</h1>

    {% if courses is not empty %}
      <p>Here are the Courses this Student is registered for:</p>
      <ul>
        {% for course in courses %}
          <li>{{ course.getName }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h4>Add a Course to this Student's schedule:</h4>

    <form action='/add_courses' method='post'>
      <input id='student_id' name='student_id' type='hidden' value='{{ student.getId }}'>

      <label for='course_id'>Select a Course</label>
      <select id='course_id' name='course_id' type='text'>
        {% for course in all_courses %}
          <option value='{{ course.getId }}'>{{ course.getName }}</option>
        {% endfor %}
      </select>
      <button type='submit'>Add Course</button>
    </form>
    <p><a href='/students/{{ student.getId }}/edit'>Edit this Student</a></p>
    <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
